# Xiaozhi WebSocket endpoint
XIAOZHI_WSS_URL=wss://example.xiaozhi.cloud/ws

# Supermemory MCP endpoint
SUPERMEMORY_MCP_URL=https://api.supermemory.ai/mcp
# Optional: timeout (seconds) and retry delay between connection attempts
SUPERMEMORY_TIMEOUT=30
SUPERMEMORY_RETRY_DELAY=5

# Bearer token for Supermemory authentication
SUPERMEMORY_TOKEN=replace-with-token

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Google Workspace MCP endpoint (optional)
# If you have Google Workspace MCP running on another server via HTTP
GOOGLE_WORKSPACE_MCP_URL=http://your-server-ip:8000/mcp
GOOGLE_WORKSPACE_ENABLED=false
